<h1>Users</h1>
<div class="section">
  <h2>All users</h2>
  <div class="hider">
<table class="list">
  <thead>
    <tr>
      <th><%= fmt_sort('Name',          'name') %></th>
      <th><%= fmt_sort('Administrator', 'administrator') %></th>
    </tr>
  </thead>
  <tbody>
    <% for (var i = 0; i < users.length; i++) { %>
       <tr<%= alt_rows(i)%>>
         <td><%= link_user(users[i].name) %></td>
         <td><%= users[i].password_hash %></td>
         <td class="c"><%= fmt_boolean(users[i].administrator) %></td>
       </tr>
    <% } %>
  </tbody>
</table>
  </div>
</div>

<div class="section">
  <h2>Add / update a user</h2>
  <div class="hider">
    <form action="#/users" method="put">
      <table class="form">
        <tr>
          <th><label>Username:</label></th>
          <td><input type="text" name="username"/></td>
        </tr>
        <tr>
          <th><label>Password:</label></th>
          <td>
            <select name="has-password" id="has-password">
              <option value="true">can log in with password:</option>
              <option value="false">cannot log in with password</option>
            </select>
            <br/>
            <div id="password">
              <input type="text" name="password" />
            </div>
          </td>
        </tr>
        <tr>
          <th><label>Administrator:</label></th>
          <td>
            <select name="administrator">
              <option value="false">No</option>
              <option value="true">Yes</option>
            </select>
          </td>
        </tr>
      </table>
      <input type="submit" value="Add user"/>
    </form>
  </div>
</div>
